{
  "name": "wx-ext",
  "version": "1.0.0",
  "description": "",
  "main": "./src/app.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon index.ts --watch ./ --ignore './test/*.spec.ts' --signal SIGHUP",
    "start": "cross-env NODE_ENV=development node .out/app.js ",
    "build": "webpack --mode=production --config=./webpack.config.js",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register -R spec ./test/index.spec.ts --exit",
    "lint": "eslint --fix ./"
  },
  "keywords": [
    "wechat",
    "wechatbot",
    "wechatAutoReply"
  ],
  "author": "gaohan085@gmail.com",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "colors": "^1.4.0",
    "dotenv": "^16.3.1",
    "fast-xml-parser": "^4.2.5",
    "mongoose": "^7.3.1",
    "node-schedule": "^2.1.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@types/node-schedule": "^2.1.0",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.27.5",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "root": true,
    "ignorePatterns": [
      "webpack.config.js",
      "app-eg.js"
    ],
    "rules": {
      "import/no-unresolved": [
        0,
        {
          "commonjs": true,
          "amd": true
        }
      ],
      "import/named": 2,
      "import/namespace": 2,
      "import/default": 2,
      "import/export": 2
    }
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^6.0.3"
  }
}